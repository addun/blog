---
interface Props {
  term: string;
}

const { term } = Astro.props;
---

<h2 class="text-4xl m-0 font-bold mt-20">Leave a comment</h2>

<div class="giscus"></div>

<script
  src="https://giscus.app/client.js"
  data-repo="addun/blog"
  data-repo-id="R_kgDOLEseqw"
  data-category="Comments"
  data-category-id="DIC_kwDOLEseq84Cdf3y"
  data-mapping="specific"
  data-term={term}
  data-strict="1"
  data-reactions-enabled="1"
  data-emit-metadata="0"
  data-input-position="bottom"
  data-theme="cobalt"
  data-lang="en"
  data-loading="lazy"
  crossorigin="anonymous"
  async></script>
